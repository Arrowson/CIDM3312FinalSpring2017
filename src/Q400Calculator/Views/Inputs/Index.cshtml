@model IEnumerable<Q400Calculator.Models.Inputs>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Altitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Icing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
